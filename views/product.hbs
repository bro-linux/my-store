<div class="row mt-3 h-100 g-4 mx-auto" id="product-one">
    <div class="col-lg-12">
        <div class="w-100 h-100">
            <img src="{{product.image}}" class="product-image w-100" alt="">
        </div>
    </div>
    <div class="col-lg-12">
        <div>
            <div>
                <h1 class="fw-bold font-inter display-4">{{product.title}}</h1>
                <p class="fs-4 lead my-5">{{product.description}}</p>
            </div>
            <div class="d-flex justify-content-between">
                <p class="fs-4">{{formatDate product.createdAt}}</p>
                <p class="fs-4">{{product.price}}.00$</p>
            </div>

        </div>
    </div>
</div>