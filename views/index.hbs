<h1 class="home__h1 fw-bold display-4 my-5" id="h1" ><span class="text-light bg-primary py-2 px-3">My Strore</span> Products</h1>
{{#if products}}
<div class="row mt-4 g-4 my-4">
    {{#each products}}
    <div class="col-12 col-md-6 col-lg-4 rounded-5">
        <div class="card shadow-sm">
            <img src={{ image }} class="w-100 image" alt="">
            <div class="card-body">
                <p class="card-text fs-4">{{title}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p>{{formatDate created}}</p>
                    </div>
                    <div class="btn-group mb-3">
                        <small class="fs-5">{{price}}.00$</small>
                    </div>
                </div>
                <div class="card-footer px-0">
                    <div class="btn-group mt-2">
                        <a class="btn btn-outline-primary" href="/product/{{_id}}">Details</a>
                        {{#if @root.token}}
                            {{#ifequal user @root.userId}}
                                <a href="/edit-product/{{_id}}" class="btn btn-outline-secondary">Edit</a>
                                <form action="/delete-product/{{_id}}" method="post">
                                    <button type="submit" class="btn btn-outline-danger delBtn">Delete</button>
                                </form>
                            {{/ifequal}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div>
    <h3 class="mt-5 text-purple">No Products</h3>
</div>
{{/if}}